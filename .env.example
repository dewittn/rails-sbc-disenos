# Environment Variables for Hilos Application
# Copy this file to .env and update with your values

# ===================================
# Database Configuration (MySQL 8)
# ===================================

# Database host (use 'db' for Docker Compose, 'localhost' for local MySQL)
DB_HOST=db

# Database username (default: root)
DB_USERNAME=root

# Database password (CHANGE THIS IN PRODUCTION!)
DB_PASSWORD=password

# Database name (will be suffixed with _development, _test, or _production based on RAILS_ENV)
DB_NAME=hilos_development

# ===================================
# Rails Configuration
# ===================================

# Rails environment (development, test, production)
RAILS_ENV=development

# Maximum number of database connections in the pool
RAILS_MAX_THREADS=5

# ===================================
# Production-Only Settings
# ===================================

# Secret key base (generate with: bundle exec rake secret)
# SECRET_KEY_BASE=your_secret_key_here

# ===================================
# Optional Settings
# ===================================

# Rails server port (default: 3000)
# PORT=3000

# MySQL port (default: 3306)
# MYSQL_PORT=3306
