- form_for @color, :url => action_path do |f|
  %table.results
    %tr
      %th Marca
      %th Color
      %th Codigo
    %tr
      %td= f.collection_select :marca_id, Marca.find(:all), :id, :nombre, :prompt => "Marca"
      %td
        = f.label :nombre, "Nombre"
        = f.text_field :nombre
      %td
        = f.label :Codigo, "Codigo"
        = f.text_field :codigo
    %tr
      %td
        %p
          o nuevo marca:
          = f.text_field :nuevo_marca
  = f.submit "Submit", :disable_with => 'Submiting...'
- button_2 button_text,'#',:onclick => "document.forms[0].submit()"